<resources>
    <!-- Style pour les cellules du tableau -->
    <style name="TableCellStyle">
        <item name="android:textSize">16sp</item> <!-- Agrandir la police -->
        <item name="android:padding">16dp</item>
        <item name="android:paddingStart">24dp</item> <!-- Ajouter de l'espace au début du texte -->
        <item name="android:paddingEnd">24dp</item> <!-- Ajouter de l'espace à la fin du texte -->
        <item name="android:gravity">center</item>
    </style>

    <!-- Style pour les en-têtes du tableau -->
    <style name="TableHeaderStyle">
        <item name="android:textSize">16sp</item> <!-- Agrandir la police pour les en-têtes -->
        <item name="android:padding">16dp</item> <!-- Espace autour des en-têtes -->
        <item name="android:paddingStart">24dp</item> <!-- Espace supplémentaire au début pour les en-têtes -->
        <item name="android:paddingEnd">24dp</item> <!-- Espace supplémentaire à la fin pour les en-têtes -->
        <item name="android:textStyle">bold</item> <!-- Mettre le texte en gras -->
        <item name="android:gravity">center</item>
    </style>
</resources>
