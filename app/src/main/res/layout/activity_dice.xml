<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".DiceActivity">

    <!-- Conteneur pour les dés -->

    <!-- Bouton pour lancer les dés -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/dice1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dice_face_1" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/dice2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dice_face_1" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/dice3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dice_face_1" />
        </FrameLayout>
    </LinearLayout>

    <!-- Deuxième ligne avec 2 dés -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/dice4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dice_face_1" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/dice5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dice_face_1" />
        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnRollDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lancer les dés"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvLancerCompteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lancers: 0"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>


    <Button
        android:id="@+id/btnBackToScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour au tableau"
        android:layout_marginTop="10dp"/>
</LinearLayout>
